---
import clsx from 'clsx'

const CardType = {
  default: 'bg-neutral-3 -mt-1 mb-1 -ml-1 card-clip',
  bordered: 'border-[1px] border-neutral-6 text-muted p-8',
}

const { link = '', class: className, target = '', type = 'default' } = Astro.props

const Element = link ? 'a' : 'div'
const href = typeof link === 'string' ? link : link?.href != null ? link.href : ''
---

<Element
  href={href}
  target={link ? target : '_self'}
  class={clsx(
    'card text-muted block aspect-square relative transition-all duration-300 cursor-pointer',
    {
      [CardType.default]: type === 'default',
      [CardType.bordered]: type === 'bordered',
    },
    className
  )}
>
  <slot />
</Element>
